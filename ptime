#!/usr/bin/env ruby

require 'time'
require 'optparse'
require 'ostruct'

def parse_args(&blk)
  OpenStruct.new.tap do |o|
    OptionParser.new.instance_exec(o, &blk).parse!
  end
end

options = parse_args do |opts|
  opts.mode = :iso
  on('-i', '--iso') { opts.mode = :iso }
  on('-f', '--format F') {|arg| opts.mode = :str; opts.format = arg }
  on('-m', '--minutes') { opts.mode = :min }
  on('-p', '--posix') { opts.mode = :str; opts.format = '%Y%m%d%H%M.%S' }
  on('-r', '--reference') { opts.reference = true }
end

def try_clf(d)
  Time.strptime(d, '%d/%b/%Y:%H:%M:%S %z')
rescue ArgumentError
  nil
end

def try_chronic(d)
  require 'chronic'
  Chronic.parse(d)
rescue ImportError
  nil
end

def try_generic(d)
  Time.parse(d)
rescue ArgumentError
  nil
end

def parse_time(d)
  try_clf(d) || try_chronic(d) || try_generic(d)
end

ARGV.each do |arg|
  t = options.reference ? File.mtime(arg) : parse_time(arg)
  if t
    case options.mode
    when :iso; puts t.iso8601
    when :str; puts t.strftime(options.format)
    when :min; puts ((Time.now - t) / 60).round
    end
  else
    STDERR.puts 'All parsing methods failed'
    puts arg
  end
end
