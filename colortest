#!/bin/sh

color_escape () {
    printf '\e[%sm' "$@"
}

set_color() {
    case $1 in
        black)      FG=30;;
        red)        FG=31;;
        green)      FG=32;;
        yellow)     FG=33;;
        blue)       FG=34;;
        magenta)    FG=35;;
        cyan)       FG=36;;
        white)      FG=37;;
        default)    FG=39;;
    esac
    case $2 in
        black)      BG=40;;
        red)        BG=41;;
        green)      BG=42;;
        yellow)     BG=43;;
        blue)       BG=44;;
        magenta)    BG=45;;
        cyan)       BG=46;;
        white)      BG=47;;
        default)    BG=49;;
    esac
    case $3 in
        normal)     AT=00;;
        bold)       AT=01;;
        italic)     AT=03;;
        blink)      AT=05;;
        underscore) AT=04;;
        reverse)    AT=07;;
        concealed)  AT=08;;
    esac
    color_escape "$AT;$BG;$FG"
}

reset_color () {
    color_escape 0
}

test -z "$*" && set -- normal bold italic blink underscore reverse concealed

for at; do
    for bg in default black red green yellow blue magenta cyan white default; do
        for fg in black red green yellow blue magenta cyan white default; do
            set_color "$fg" "$bg" "$at"
            printf '%s' "$fg "
            reset_color
            printf 'ok '
        done
        echo
    done
done
