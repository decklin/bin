#!/usr/bin/python
# coding=utf8

import pymetar
import sys

try:
    station = sys.argv[1]
except IndexError:
    station = 'KBOS'

fetcher = pymetar.ReportFetcher(station)
parser = pymetar.ReportParser()
report = parser.ParseReport(fetcher.FetchReport())

print report.getWeather(), "(%sÂ°C)" % report.getTemperatureCelsius()
